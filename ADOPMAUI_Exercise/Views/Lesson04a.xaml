<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 			 xmlns:viewmodels="clr-namespace:ADOPMAUI_Exercise.ViewModels"
             x:Class="ADOPMAUI_Exercise.Views.Lesson04a"
             Padding="5,0"
             Title="Lesson 4">
    <VerticalStackLayout>
        <ListView ItemsSource="{x:Static viewmodels:Lesson04aViewModel.All}"
			  ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}"
                          Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>